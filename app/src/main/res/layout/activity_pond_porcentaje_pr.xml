<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pond_porcentaje_pr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.daniel.calificator21.pond_porcentaje_pr">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/title_porciento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Porcentajes de EvauaciÃ³n"
                android:textSize="24dp"
                android:textColor="@color/ink"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_pnd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ponderacion 1"
                    android:textSize="18dp"
                    android:maxLength="25"
                    android:textColor="@color/ink"
                    android:textColorHint="@color/ink"
                    android:digits="@string/textAlph"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/idPorPon1"
                    android:max="100"
                    android:progress="1"
                    android:indeterminate="false"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pond1ID"
                    android:textSize="18dp"
                    android:textColor="@color/ink"/>

            </LinearLayout>


            <EditText
                android:id="@+id/et_pnd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ponderacion 2"
                android:textSize="18dp"
                android:maxLength="25"
                android:textColor="@color/ink"
                android:textColorHint="@color/ink"
                android:digits="@string/textAlph"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/idPorPon2"
                    android:max="100"
                    android:progress="1"
                    android:indeterminate="false"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pond2ID"
                    android:textSize="18dp"
                    android:textColor="@color/ink"/>


            </LinearLayout>

            <EditText
                android:id="@+id/et_pnd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ponderacion 3"
                android:textSize="18dp"
                android:maxLength="25"
                android:textColor="@color/ink"
                android:textColorHint="@color/ink"
                android:digits="@string/textAlph"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/idPorPon3"
                    android:max="100"
                    android:progress="1"
                    android:indeterminate="false"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pond3ID"
                    android:textSize="18dp"
                    android:textColor="@color/ink"/>


            </LinearLayout>

            <EditText
                android:id="@+id/et_pnd4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ponderacion 4"
                android:textSize="18dp"
                android:maxLength="25"
                android:textColor="@color/ink"
                android:textColorHint="@color/ink"
                android:digits="@string/textAlph"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <SeekBar
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/idPorPon4"
                    android:max="100"
                    android:progress="1"
                    android:indeterminate="false"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pond4ID"
                    android:textSize="18dp"
                    android:textColor="@color/ink"/>


            </LinearLayout>

            <EditText
                android:id="@+id/et_pnd5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ponderacion 5"
                android:textSize="18dp"
                android:maxLength="25"
                android:textColor="@color/ink"
                android:textColorHint="@color/ink"
                android:digits="@string/textAlph"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <SeekBar
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/idPorPon5"
                    android:max="100"
                    android:progress="1"
                    android:indeterminate="false"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pond5ID"
                    android:textSize="18dp"
                    android:textColor="@color/ink"/>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="@color/ink"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:text="Aceptar"
                android:id="@+id/btn_acp_porc"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="78dp"
                android:background="@drawable/boton_calificator"
                android:textColor="@color/ink"
                android:textSize="20dp"
                android:padding="10dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
