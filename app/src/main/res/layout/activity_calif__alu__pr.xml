<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calif__alu__pr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.calificator21.Calif_Alu_PR"
    android:background="@drawable/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/TV_TL_EV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evaluar"
                android:textSize="24dp"
                android:textColor="@color/ink"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/TV_periodo_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periodo"
                android:textSize="20dp"
                android:textColor="@color/ink"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/SP_FV_PR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"></Spinner>

            <TextView
                android:id="@+id/TV_NOM_POND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ponderación"
                android:textSize="20dp"
                android:textColor="@color/ink"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/SP_NomPON_PR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"></Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <EditText
                    android:id="@+id/ET_DESC"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Descripción"
                    android:textSize="20dp"
                    android:textColor="@color/ink"
                    android:layout_gravity="center|top"
                    android:maxLength="45"
                    android:textColorHint="@color/ink"
                    android:layout_weight="0.39"
                    android:digits="@string/textAlph"/>
                <EditText
                    android:id="@+id/ET_CALIF"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxLength="2"
                    android:inputType="number"
                    android:hint="10"
                    android:textColor="@color/ink"
                    android:textColorHint="@color/ink"
                    android:layout_gravity="center|top"/>

            </LinearLayout>
            <TextView
                android:id="@+id/TV_FCAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="20dp"
                android:textColor="@color/ink"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/Linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/BTN_FC"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center|top"
                    android:background="@drawable/boton_calificator"
                    android:text="YYYY-MM-DD"
                    android:textColor="@color/ink"
                    android:onClick="showCalendar"/>

                <TextView
                    android:id="@+id/FC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/ink"
                    android:textSize="18dp"
                    android:focusable="false"/>
            </LinearLayout>
            <Button
                android:id="@+id/BTN_EV"
                style="?android:textAppearanceSmall"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/boton_calificator"
                android:textColor="@color/ink"
                android:text="Evaluar"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
