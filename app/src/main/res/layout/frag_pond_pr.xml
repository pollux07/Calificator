<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_pond_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ponderaciones"
                android:textSize="24dp"
                android:textColor="@color/ink"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"/>

            <TextView
                android:id="@+id/txt_mat_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Materia"
                android:textSize="20dp"
                android:textColor="@color/ink"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/sp_pond_mt_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"></Spinner>

            <TextView
                android:id="@+id/txt_no_pond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero de Ponderaciones"
                android:textSize="20dp"
                android:textColor="@color/ink"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/sp_no_pond_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"></Spinner>

            <LinearLayout
                android:id="@+id/Linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TxtV_FI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Vigencia:"
                    android:textColor="@color/ink"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/BTN_FI"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/boton_calificator"
                    android:text="YYYY-MM-DD"
                    android:textColor="@color/ink" />

                <TextView
                    android:id="@+id/FI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/ink"
                    android:textSize="18dp"
                    android:focusable="false"/>
            </LinearLayout>

            <Button
                android:id="@+id/BTN_cont"
                style="?android:textAppearanceSmall"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/boton_calificator"
                android:textColor="@color/ink"
                android:text="@string/Continue"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>