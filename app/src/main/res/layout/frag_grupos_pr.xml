<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_gp_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupos"
                android:textSize="24dp"
                android:textColor="@color/ink"
                android:layout_gravity="center"
                android:layout_marginTop="70dp" />

            <TextView
                android:id="@+id/txt_carrier_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrera"
                android:textSize="20dp"
                android:textColor="@color/ink"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/sp_carrier_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"></Spinner>

            <TextView
                android:id="@+id/txt_groups_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grupos"
                android:textSize="20dp"
                android:textColor="@color/ink"
                android:layout_marginTop="20dp"/>

            <Spinner
                android:id="@+id/sp_groups_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"></Spinner>

            <Button
                android:id="@+id/BTN_cont_group"
                style="?android:textAppearanceSmall"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/boton_calificator"
                android:textColor="@color/ink"
                android:text="@string/Continue"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>